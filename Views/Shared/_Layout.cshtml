@using Microsoft.AspNetCore.Identity
@using Doska.Models
@*@using System.Linq;*@
@*@using System.Security.Claims;*@


@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link asp-href-include="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link asp-href-include="~/Style/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <nav class=" navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="row flex-grow-1">
                    <div class="col">
                        <div class="navbar-collapse collapse d-sm-flex flex-sm-row-reverse float-right">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="FindAdses">Поиск</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="CreateAds">Подать обьявление</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link">Ваш язык: Русский</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link">Валюта: BYN</a>
                                </li>
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Logout" asp-controller="Account">Выход</a>
                                    </li>
                                    <li>
                                        <a class="nav-link">Пользователь: @UserManager.GetUserName(User)</a>
                                        <a class="nav-link" asp-action="ViewCustomerAdses" asp-controller="Home">  @await Component.InvokeAsync("CustomerSummary") </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Create" asp-controller="Account">Регистрация</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Login" asp-controller="Account">Вход</a>
                                    </li>
                                }

                            </ul>
                        </div>

                    </div>

                </div>
            </div>

        </nav>
    </header>
    <div class="bg-light">
        @if (TempData["message"] != null)
        {<div class="alert-success">@TempData["message"]</div>}
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
