@model Find
@*@model string*@

@{ ViewData["Title"] = "Поиск"; }

<div class="find-form doska-form">
    <div class="card">
        <div class="card-header">Поиск</div>

        <div class="card-body">
            <form asp-controller="Home" asp-action="FindAdses">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-group">
                    <span asp-validation-for="Text" class="text-danger"></span>
                    <input asp-for="Text" class="form-control" type="text" name="findtext" placeholder="Введите текст" />
                    <div class=" input-group-append">
                        <button class="btn btn-primary" type="submit" value="Найти" data-toggle="tooltip" data-placement="top" title="Search">
                            <i class="fa fa-search"></i> Поиск
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div>
            <a asp-controller="Home" asp-action="Index">На главную</a>
        </div>
    </div>
</div>
