@*@model IEnumerable<Doska.Models.Ads>*@
@model AdsesListViewModel



@{ ViewData["Title"] = "Показать обьявления"; }


<div class="listadses-form doska-form">
    <div class="card">
        <div class="card-header">@Model.Catalog.NameTitle/@Model.Catalog.NameSubtitle</div>
        <div class="card-body">
            <div>
                <a asp-controller="Home" asp-action="Index">На главную</a>
            </div>
            <table class="table table-striped table-hover table-sm table-bordered">
                <thead>
                    <tr>
                        <th>
                            Дата
                        </th>
                        <th>
                            Текст
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Adses)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdsCreate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdsText)
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-outline-info" href="@Url.Action("DetailsAds", "Home", new { id=item.Id })" data-toggle="tooltip" data-placement="top" title="Details"><i class="fa fa-info"></i> </a>
                            </div>
                        </td>
                    </tr>}
                </tbody>
            </table>


            <ul page-model="@Model.PagingInfo" page-controller="Home" page-action="ViewSelectAds" page-classes-enabled="true"
                page-class-item="page-item" page-class-link="page-link" page-class-pagination="pagination"
                page-class-normal="" page-class-selected="active" class="pagination">  </ul>


