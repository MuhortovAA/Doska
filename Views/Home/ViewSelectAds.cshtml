                    </li>

                    @for (int i = 1; i < 10; i++)
                    {
                <li class="page-item">
                    <a class="page-link" asp-controller="Home" asp-action="ViewSelectAds" asp-route-contentid="1" asp-route-pageid="@i">@i</a>
                </li>
                }
                    <li class="page-item">
                        <a class="page-link" asp-controller="Home" asp-action="ViewSelectAds">Next</a>
                    </li>

                </ul>*@
        </div>
    </div>
</div>
