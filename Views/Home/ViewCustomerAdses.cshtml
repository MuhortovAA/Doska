@model IEnumerable<Doska.Models.AdsCustomer>

@{ ViewData["Title"] = "Мои объявления"; }


<div class="doska-form ml-5 mr-5">
    <h4>Мои объявления</h4>
    <table class="table table-striped table-hover table-sm table-bordered">

        <thead>
            <tr>
                <th>

                </th>
                <th>
                    Дата
                </th>
                <th>
                    Рубрика
                </th>
                <th>
                </th>
                <th>
                    Текст
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdsCreate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameSubtitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdsText)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Ads", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm m-1" }) |
                        @Html.ActionLink("Details", "Details", "Ads", new { id = item.Id }, new { @class = "btn btn-primary btn-sm m-1" }) |
                        @Html.ActionLink("Delete", "Delete", "Ads", new { id = item.Id }, new { @class = "btn btn-primary btn-sm m-1" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="Home" asp-action="Index">На главную</a>
    </div>
</div>
